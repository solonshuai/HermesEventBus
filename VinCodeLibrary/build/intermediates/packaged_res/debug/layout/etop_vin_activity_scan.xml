<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#969696"
    tools:context=".EtVinScanActivity">

    <RelativeLayout
        android:id="@+id/etop_rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/etop_sv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageButton
            android:id="@+id/etop_ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/etop_vin_back_camera" />

        <ImageButton
            android:id="@+id/etop_ib_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/etop_vin_lock_off" />

        <ImageButton
            android:id="@+id/etop_ib_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/etop_vin_flash_on" />

        <!--<ImageButton
            android:id="@+id/etop_ib_tackpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/etop_tack_pic_btn" />-->

        <TextView
            android:id="@+id/etop_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/viewfinder_frame"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="识别结果" />

        <TextView
            android:id="@+id/etop_tv_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_color"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="点击屏幕继续识别" />

        <TextView
            android:id="@+id/etop_tv_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/viewfinder_gery"
            android:padding="3dp"
            android:text="请将VIN码放置框内"
            android:textColor="#FFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/etop_iv_showbmp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/scan_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/etop_vin_horizontal_line" />
        <ImageView
            android:id="@+id/scanVerticalLineImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@drawable/etop_vin_vertical_line"/>
    </RelativeLayout>

</RelativeLayout>