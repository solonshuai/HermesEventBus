<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top_view"
        layout="@layout/top_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_view"
            android:background="@color/color_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_car_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="车牌号码"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <EditText
                    android:id="@+id/et_car_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_car_num"
                    android:layout_toStartOf="@+id/iv_car_scan"
                    android:background="@drawable/shape_gary_radius"
                    android:hint="请输入车牌号码"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

                <ImageView
                    android:id="@+id/iv_car_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/img_scanning" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_carjia_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="车架号码"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <EditText
                    android:id="@+id/et_carjia_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_carjia_num"
                    android:layout_toStartOf="@+id/iv_carjia_scan"
                    android:background="@drawable/shape_gary_radius"
                    android:hint="请输入17位车架号码"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

                <ImageView
                    android:id="@+id/iv_carjia_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/img_scanning" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_car_pinpai"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="车型品牌"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <TextView
                    android:id="@+id/tv_pinpai_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_car_pinpai"
                    android:background="@drawable/shape_gary_radius"
                    android:gravity="center_vertical"
                    android:hint="请选择车型"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_car_engine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="发动机号"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <EditText
                    android:id="@+id/et_engine_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_car_engine"
                    android:background="@drawable/shape_gary_radius"
                    android:hint="请输入发动机号码"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_car_baoxian"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="保险公司"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <TextView
                    android:id="@+id/tv_baoxian_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_car_baoxian"
                    android:background="@drawable/shape_gary_radius"
                    android:gravity="center_vertical"
                    android:hint="请选择保险公司"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_car_daoqi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="到期日期"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <TextView
                    android:id="@+id/tv_daoqi_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_car_daoqi"
                    android:background="@drawable/shape_gary_radius"
                    android:gravity="center_vertical"
                    android:hint="请选择保险到期日期"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_car_nianshen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="年审日期"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <TextView
                    android:id="@+id/et_nianshen_num"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_car_nianshen"
                    android:background="@drawable/shape_gary_radius"
                    android:gravity="center_vertical"
                    android:hint="请选择年审日期"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/color_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="客户名称"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_songxiuren_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_gary_radius"
                        android:hint="请输入姓名"
                        android:textSize="@dimen/album_sp_14" />

                    <RadioGroup
                        android:id="@+id/rg_songxiuren"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_nan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:text="先生" />

                        <RadioButton
                            android:id="@+id/rb_nv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="女生" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="客户类型"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <RadioGroup
                    android:id="@+id/rg_songxiuren2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_nan2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="个人" />

                    <RadioButton
                        android:id="@+id/rb_nv2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="单位" />
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="手机号码"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_gary_radius"
                        android:hint="请输入手机号码"
                        android:maxLength="11"
                        android:textSize="@dimen/album_sp_14" />

                    <ImageView
                        android:id="@+id/iv_phone_scanning"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@mipmap/img_customer_sel" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="客户等级"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/album_sp_16" />

                <TextView
                    android:id="@+id/tv_user_level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_gary_radius"
                    android:gravity="center_vertical"
                    android:hint="请选择客户等级"
                    android:maxLength="18"
                    android:textSize="@dimen/album_sp_14" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>