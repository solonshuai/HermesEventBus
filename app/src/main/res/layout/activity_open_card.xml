<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray">

    <include
        android:id="@+id/top_view"
        layout="@layout/top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="sssss"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_name"
                android:src="@mipmap/img_nan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                tools:text="1800000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="充值金额"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <EditText
                android:id="@+id/et_recharge_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_money"
                android:layout_toStartOf="@+id/tv_money_danwei"
                android:background="@drawable/shape_gary_radius"
                android:src="@mipmap/img_nan" />

            <TextView
                android:id="@+id/tv_money_danwei"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="元" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_song_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="赠送金额"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <EditText
                android:id="@+id/et_giver_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_song_money"
                android:layout_toStartOf="@+id/tv_song_danwei"
                android:background="@drawable/shape_gary_radius" />

            <TextView
                android:id="@+id/tv_song_danwei"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="元" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="选择卡种"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_card"
                android:background="@drawable/shape_gary_radius"
                android:gravity="center_vertical"
                android:hint="选填" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_ticheng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="提成员工"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/tv_ticheng_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_ticheng"
                android:background="@drawable/shape_gary_radius" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@color/color_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="支付方式"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_pay"
                android:background="@drawable/shape_gary_radius" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_kaika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="开 卡"
        android:textColor="@color/color_white"
        android:textSize="@dimen/album_sp_16" />
</RelativeLayout>