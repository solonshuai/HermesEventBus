<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_view"
        layout="@layout/top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="车牌号码"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <EditText
                android:id="@+id/et_car_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_num"
                android:layout_toStartOf="@+id/iv_car_scan"
                android:background="@drawable/shape_gary_radius"
                android:hint="请输入车牌号码"
                android:maxLength="8"
                android:textSize="@dimen/album_sp_14" />

            <ImageView
                android:id="@+id/iv_car_scan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:src="@mipmap/img_scanning" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_carjia_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="车架号码"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <EditText
                android:id="@+id/et_carjia_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_carjia_num"
                android:layout_toStartOf="@+id/iv_carjia_scan"
                android:background="@drawable/shape_gary_radius"
                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="请输入17位车架号码"
                android:maxLength="17"
                android:textSize="@dimen/album_sp_14" />

            <ImageView
                android:id="@+id/iv_carjia_scan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:src="@mipmap/img_scanning" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_pinpai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="车型品牌"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/tv_pinpai_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_pinpai"
                android:background="@drawable/shape_gary_radius"
                android:gravity="center_vertical"
                android:hint="请选择车型"
                android:maxLength="18"
                android:textSize="@dimen/album_sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_engine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="发动机号"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <EditText
                android:id="@+id/et_engine_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_engine"
                android:background="@drawable/shape_gary_radius"
                android:hint="请输入发动机号码"
                android:maxLength="18"
                android:textSize="@dimen/album_sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_baoxian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="保险公司"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/tv_baoxian_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_baoxian"
                android:background="@drawable/shape_gary_radius"
                android:gravity="center_vertical"
                android:hint="请选择保险公司"
                android:maxLength="18"
                android:textSize="@dimen/album_sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_daoqi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="到期日期"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/tv_daoqi_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_daoqi"
                android:background="@drawable/shape_gary_radius"
                android:gravity="center_vertical"
                android:hint="请选择保险到期日期"
                android:maxLength="18"
                android:textSize="@dimen/album_sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_nianshen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="年审日期"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <TextView
                android:id="@+id/et_nianshen_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_nianshen"
                android:background="@drawable/shape_gary_radius"
                android:gravity="center_vertical"
                android:hint="请选择年审日期"
                android:maxLength="18"
                android:textSize="@dimen/album_sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_gongli"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="行驶公里"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <EditText
                android:id="@+id/et_gongli_num"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_gongli"
                android:background="@drawable/shape_gary_radius"
                android:hint="请输入行驶公里数"
                android:maxLength="18"
                android:textSize="@dimen/album_sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_car_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="添加照片"
                android:textColor="@color/color_black"
                android:textSize="@dimen/album_sp_16" />

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_car_photo"
                android:background="@drawable/shape_gary_radius"
                android:scaleType="center" />

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/bt_baocun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="保 存"
            android:textColor="@color/color_white" />
    </FrameLayout>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/c_d8d3cf"
        android:keyBackground="@drawable/key_abc_bg"
        android:keyTextColor="@color/c_333333"
        android:visibility="gone" />

</RelativeLayout>